rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isExpert() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'expert';
    }
    
    function getExpertId() {
      // Get expert's profile ID from expertUsers collection using their uid
      let expertUserDoc = get(/databases/$(database)/documents/expertUsers/$(request.auth.uid));
      return expertUserDoc.data.expertId;
    }
    
    function isExpertOwner(expertId) {
      // Check if the authenticated user is the expert who owns this expertId
      return isExpert() && getExpertId() == expertId;
    }
    
    // ============================================
    // USERS COLLECTION (NEW - for admin system)
    // ============================================
    match /users/{userId} {
      // Anyone authenticated can read their own user doc
      allow read: if isOwner(userId);
      
      // Experts can read user info for their appointments
      // This is needed for appointment detail page
      allow read: if isExpert();
      
      // User can create their own profile on signup
      allow create: if isOwner(userId);
      
      // User can update their own profile (except role, isBanned, banReason)
      allow update: if isOwner(userId) && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isBanned', 'banReason', 'bannedAt']);
      
      // Admin can ONLY update specific fields: role, isBanned, banReason, bannedAt
      // This prevents admin from modifying user's displayName, email, etc.
      allow update: if isAdmin() && 
                       request.resource.data.diff(resource.data)
                       .affectedKeys().hasOnly(['role', 'isBanned', 'banReason', 'bannedAt']);
      
      // Admin can read all users
      allow read: if isAdmin();
      
      // Admin can delete users
      allow delete: if isAdmin();
    }
    
    // ============================================
    // USER PROFILES (Legacy - keep for backward compatibility)
    // ============================================
    match /profiles/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
      
      // Admin can read all profiles
      allow read: if isAdmin();
      // Admin can delete profiles
      allow delete: if isAdmin();
    }
    
    // ============================================
    // MOOD ENTRIES
    // ============================================
    match /moodEntries/{entryId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admin can read all mood entries (for analytics)
      allow read: if isAdmin();
      // Admin can delete mood entries
      allow delete: if isAdmin();
    }
    
    // ============================================
    // MEDITATIONS - Everyone reads, only admin writes
    // ============================================
    match /meditations/{meditationId} {
      allow read: if true; // Public read
      allow create, update, delete: if isAdmin(); // Only admin can write
    }
    
    // ============================================
    // STREAKS
    // ============================================
    match /streaks/{streakId} {
      allow read: if isOwner(streakId);
      allow create, update: if isOwner(streakId);
      allow delete: if isOwner(streakId);
      
      // Admin can read all streaks
      allow read: if isAdmin();
      // Admin can delete streaks
      allow delete: if isAdmin();
    }
    
    // ============================================
    // MEDITATION COMPLETIONS
    // ============================================
    match /meditationCompletions/{completionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // USER ACTIVITIES
    // ============================================
    match /userActivities/{activityId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // EXPERTS - Coming soon (Phase 3)
    // ============================================
    match /experts/{expertId} {
      allow read: if true; // Public read
      
      // ⭐ Allow experts to update their availability fields
      // When expert updates schedule, we sync summary to experts collection
      allow update: if isExpert() && 
                       request.resource.data.diff(resource.data)
                       .affectedKeys().hasOnly(['availability', 'isAvailable']);
      
      allow write: if isAdmin(); // Admin can manage all fields
    }
    
    // ============================================
    // EXPERT USERS - Expert applications and profiles
    // ============================================
    match /expertUsers/{expertUserId} {
      // Anyone can read expertUsers (needed for booking flow to get expert uid)
      allow read: if true;
      
      // Users can create their own expert application
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      
      // Experts can update their own profile (except status, approvedAt, rejectedAt)
      allow update: if isAuthenticated() && 
                       resource.data.uid == request.auth.uid &&
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'approvedAt', 'rejectedAt', 'suspendedAt']);
      
      // Admin can update expert applications (approve, reject, suspend)
      allow update: if isAdmin();
      
      // Admin can delete expert applications
      allow delete: if isAdmin();
    }
    
    // ============================================
    // APPOINTMENTS - Users book, Experts manage
    // ============================================
    match /appointments/{appointmentId} {
      // Users can read their own appointments
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Experts can read appointments for their expertId
      allow read: if isExpert() && isExpertOwner(resource.data.expertId);
      
      // ⭐ NEW: Allow authenticated users to query appointments by expertId
      // This is needed for:
      // 1. Checking booked time slots when booking (conflict detection)
      // 2. Filtering available slots for a specific expert
      // Note: Users can only list appointments, not read individual documents
      allow list: if isAuthenticated();
      
      // Users can create appointments for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update/cancel their own appointments
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Experts can update appointments (confirm, complete, etc.)
      allow update: if isExpert() && isExpertOwner(resource.data.expertId);
      
      // Users can delete their own appointments
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admin can read/update/delete all appointments
      allow read, update, delete: if isAdmin();
    }
    
    // ============================================
    // AVAILABILITY - Expert schedule management
    // ============================================
    match /availability/{availabilityId} {
      // Anyone can read expert availability (for booking)
      allow read: if true;
      
      // Experts can create/update their own availability
      // Note: expertId in availability document is the expert's uid
      allow create: if isExpert() && request.resource.data.expertId == request.auth.uid;
      allow update: if isExpert() && resource.data.expertId == request.auth.uid;
      
      // Admin can read/update all availability
      allow read, update: if isAdmin();
    }
    
    // ============================================
    // CONFIG - Public read, admin write
    // ============================================
    match /config/{configId} {
      allow read: if true; // Public read
      allow write: if isAdmin(); // Only admin can update config
    }
    
    // ============================================
    // NEWS POSTS - Community feed
    // ============================================
    match /newsPosts/{postId} {
      // Anyone can read posts
      allow read: if true;
      
      // Authenticated users can create posts
      allow create: if isAuthenticated() && 
                       request.resource.data.authorId == request.auth.uid;
      
      // Authors can update/delete their own posts
      allow update: if isAuthenticated() && 
                       resource.data.authorId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       resource.data.authorId == request.auth.uid;
      
      // ⭐ Authenticated users can update posts to toggle likes or update comment count
      // Only allow updating the 'likedBy' and 'commentCount' fields
      allow update: if isAuthenticated() &&
                       request.resource.data.diff(resource.data)
                       .affectedKeys().hasOnly(['likedBy', 'commentCount']);
      
      // Admin can manage all posts
      allow write: if isAdmin();
    }
    
    // ============================================
    // POST COMMENTS - Comments on news posts
    // ============================================
    match /postComments/{commentId} {
      // Anyone can read comments
      allow read: if true;
      
      // Authenticated users can create comments
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Authors can delete their own comments
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      
      // ⭐ Post authors can delete any comment on their posts
      // We need to get the post document to check if current user is the post author
      allow delete: if isAuthenticated() && 
                       get(/databases/$(database)/documents/newsPosts/$(resource.data.postId)).data.authorId == request.auth.uid;
      
      // Admin can manage all comments
      allow write: if isAdmin();
    }
  }
}
